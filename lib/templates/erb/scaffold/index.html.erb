


<div class="row">
  <div class="col-md-12">
    <div class="widget-area">

     <div class="streaming-table">

      <span style="display: none;" id="found" class="label label-info"></span>
      <div class="heading">
        <strong>Listing</strong> <%= plural_table_name %>
        <input name="search" id="st_search" class="st_search" placeholder="Search Here" type="text">
      </div>
      <div class="table-responsive">
        <table id="stream_table" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <% attributes.each do |attribute| -%>
              <th><%= attribute.human_name %></th>
              <% end -%>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
            <% attributes.each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
            <% end -%>
            <td><%%= link_to '<i class="fa fa-book"></i>'.html_safe, <%= singular_table_name %>, class: "btn btn-sm btn-default" %>
            <%%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-sm btn-primary" %>
            <%%= link_to '<i class="fa fa-remove (alias)"></i>'.html_safe, <%= singular_table_name %>, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%% end %>
          </tbody>
        </table>
      </div>
    </div>  
    <div class="">
     <%%= link_to new_<%= singular_table_name %>_path, :class => 'btn btn-primary' do %>
        <span class="fa fa-plus"></span>
        New <%#= human_name %>
        <%% end %>
    </div>
  </div></div>
</div>