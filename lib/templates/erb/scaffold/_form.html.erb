<%%= form_for(@<%= singular_table_name %>, :html => { :class => "form-horizontal" }) do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited this <%= singular_table_name %> from being saved:</h4>

      <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
        <li><%%= msg %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

<% attributes.each do |attribute| -%>
  <div class="col-md-6">
    <div class="inline-form">
      <%%= f.label :<%= attribute.name %>, :class => "c-label" %>
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>%>
    </div>
  </div>
<% end -%>
<div class="col-md-12">
    <br>
      <%%= f.submit :class => "btn btn-primary" %>
      <%%= link_to <%= index_helper %>_path, :class => 'btn btn-default' do %>
    <span class="fa fa-list-alt"></span>
    Back
  <%% end %>
</div>
<%% end %>
