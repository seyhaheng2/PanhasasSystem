<%= form_for(@education_background, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @education_background.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@education_background.errors.count, "error") %> prohibited this education_background from being saved:</h4>

      <ul>
      <% @education_background.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :high_school, :class => "c-label" %>
      <%= f.text_area :high_school%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :english_program, :class => "c-label" %>
      <%= f.text_area :english_program%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :degree_program, :class => "c-label" %>
      <%= f.text_area :degree_program%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :university, :class => "c-label" %>
      <%= f.text_area :university%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :graduate_school, :class => "c-label" %>
      <%= f.text_area :graduate_school%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :type_of_degree, :class => "c-label" %>
      <%= f.text_field :type_of_degree%>
    </div>
  </div>
  <div class="col-md-6">
    <div class="inline-form">
      <%= f.label :desired_major, :class => "c-label" %>
