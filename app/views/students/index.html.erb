


<div class="row">
  <div class="col-md-12">
    <div class="widget-area">

     <div class="streaming-table">

      <span style="display: none;" id="found" class="label label-info"></span>
      <div class="heading">
        <strong>Listing</strong> students
        <input name="search" id="st_search" class="st_search" placeholder="Search Here" type="text">
      </div>
      <div class="table-responsive">
        <table id="stream_table" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
                            <th>Name khmer</th>
                            <th>Name english</th>
                            <th>Gender</th>
                            <th>Marital status</th>
                            <th>Dob</th>
                            <th>Pob</th>
                            <th>Nationality</th>
                            <th>Home address</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Work place</th>
                            <th>Position</th>
                            <th>Parent name</th>
                            <th>Spouse name</th>
                            <th>Emergency contact</th>
                            <th>Emergency relationship</th>
                            <th>Emergency address</th>
                            <th>Emergency telephone</th>
                            <th>Education background</th>
                            <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @students) do |student| %>
                        <td><%= student.name_khmer %></td>
                        <td><%= student.name_english %></td>
                        <td><%= student.gender %></td>
                        <td><%= student.marital_status %></td>
                        <td><%= student.dob %></td>
                        <td><%= student.pob %></td>
                        <td><%= student.nationality %></td>
                        <td><%= student.home_address %></td>
                        <td><%= student.telephone %></td>
                        <td><%= student.email %></td>
                        <td><%= student.work_place %></td>
                        <td><%= student.position %></td>
                        <td><%= student.parent_name %></td>
                        <td><%= student.spouse_name %></td>
                        <td><%= student.emergency_contact %></td>
                        <td><%= student.emergency_relationship %></td>
                        <td><%= student.emergency_address %></td>
                        <td><%= student.emergency_telephone %></td>
                        <td><%= student.education_background %></td>
                        <td><%= link_to '<i class="fa fa-book"></i>'.html_safe, student, class: "btn btn-sm btn-default" %>
            <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_student_path(student), class: "btn btn-sm btn-primary" %>
            <%= link_to '<i class="fa fa-remove (alias)"></i>'.html_safe, student, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>  
    <div class="">
     <%= link_to new_student_path, :class => 'btn btn-primary' do %>
        <span class="fa fa-plus"></span>
        New 
        <% end %>
    </div>
  </div></div>
</div>